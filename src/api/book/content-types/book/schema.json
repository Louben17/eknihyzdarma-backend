{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book",
    "description": "E-knihy"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "richtext"
    },
    "isFree": {
      "type": "boolean",
      "default": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "ebookFiles": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["files"]
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "books"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "books"
    },
    "downloads": {
      "type": "integer",
      "default": 0,
      "pluginOptions": {
        "content-manager": {
          "visible": false
        }
      }
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "externalLinks": {
      "type": "json",
      "pluginOptions": {
        "content-manager": {
          "visible": true
        }
      }
    },
    "coverExternalUrl": {
      "type": "string"
    },
    "mlpId": {
      "type": "string"
    }
  }
}
